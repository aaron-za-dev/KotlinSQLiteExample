<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/inputName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Completo" android:id="@+id/txtName"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/inputName" android:id="@+id/inputEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo Electronico" android:id="@+id/txtEmailReg" android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/inputPass">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a" android:id="@+id/txtPassReg" android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="Registrar"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/inputPass" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.AppCompat.Button.Colored"/>
</android.support.constraint.ConstraintLayout>